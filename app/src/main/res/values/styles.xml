        <item name="colorPrimary">@color/blue_button</item>
        <item name="colorPrimaryVariant">#0066CC</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/blue_button</item>
        <item name="colorSecondaryVariant">#0066CC</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/dark_background</item>
        
        <!-- Background colors -->
        <item name="android:windowBackground">@color/dark_background</item>
        
        <!-- Text colors -->
        <item name="android:textColor">@color/white</item>
